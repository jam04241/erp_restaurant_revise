<Page x:Class="practice.Pages.EmpRecord"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
      Title="EmpRecord">

    <Grid Background="#FF051821">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="700"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <TextBlock Height="50"/>
            <Label Content="Employee Records" Foreground="White" FontSize="20" Width="750"/>
            <TextBlock Height="20"/>
            <WrapPanel Height="50" Width="750" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
                <!-- Search Box -->
                <TextBox x:Name="SearchBox"
             Width="200" Height="30"
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             HorizontalContentAlignment="Center"
             VerticalContentAlignment="Center"
             Margin="0,0,20,0"
             TextChanged="SearchBox_TextChanged"
             />

                <!-- Sort ComboBox -->
                <ComboBox x:Name="SortBox"
              Width="120" Height="30"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              SelectionChanged="SortBox_SelectionChanged">
                    <ComboBoxItem Content="Newest"/>
                    <ComboBoxItem Content="Oldest"/>
                </ComboBox>
            </WrapPanel>

            <StackPanel Width="750">
                <DataGrid x:Name="employeeDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          Background="White"
                          Height="500"
                          Width="750"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding EmployeeID}" Width="50"/>
                        <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                        <DataGridTextColumn Header="Middle Name" Binding="{Binding MiddleName}" Width="*"/>
                        <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                        <DataGridTextColumn Header="Sex" Binding="{Binding Sex}" Width="*"/>
                        <DataGridTextColumn Header="Contact" Binding="{Binding Contact}" Width="*"/>
                        <DataGridTextColumn Header="Position" Binding="{Binding PositionName}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Edit" Margin="5,0" Click="EditButton_Click"/>
                                        <Button Content="Delete" Margin="5,0" Click="DeleteButton_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
