<Page x:Class="practice.Pages.EmpRecord"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
      Title="EmpRecord">

    <Grid Background='#FF051821'>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="700"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Grid>

            </Grid>
            <TextBlock Height="50"/>
            <Label Content="Employee Records" Foreground="White" FontSize="20" Width="750"/>
            <TextBlock Height="20"/>
            <WrapPanel Height="50" Width="750" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBox Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <ComboBox Width="100" HorizontalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="50,0,280,0">
                    <ComboBoxItem Content="Newest"/>
                    <ComboBoxItem Content="Oldest"/>

                </ComboBox>
                <Button Width="120" Content="Create Attendance">

                </Button>

            </WrapPanel>
            <StackPanel Width="750">
                <DataGrid Height="100" d:ItemsSource="{d:SampleData ItemCount=5}"/>

            </StackPanel>

        </StackPanel>

    </Grid>
</Page>