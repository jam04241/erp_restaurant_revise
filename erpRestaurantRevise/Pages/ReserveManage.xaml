<Page x:Class="practice.Pages.ReserveManage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
      Title="ReserveManage">

    <Grid Background="#FF051821">
        <!-- Search -->
        <TextBox HorizontalAlignment="Left" Margin="74,128,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="209" Height="24"/>

        <!-- Available Tables Panel -->
        <Grid Width="300" Margin="558,169,42,615" Background="#FF1A4645">
            <Label Content="Available Tables" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="18" Margin="0,10,0,0"/>
            <Label x:Name="AvailableTablesLabel" Content="20/50" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="50" Width="144" Height="82"/>
        </Grid>

        <!-- Pending Reservations -->
        <StackPanel Margin="558,357,42,293" Background="#FF1A4645">
            <Label Content="Pending Reservations" Foreground="White" FontSize="18" Margin="10"/>
            <ItemsControl x:Name="PendingReservationsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel Height="41" Width="268" Margin="16,5,16,0" Background="#FF328C86">
                            <TextBlock Width="20"/>
                            <Label Content="{Binding CustomerName}" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Width="20"/>
                            <Button Content="Confirm Reservation" Background="#FF7DD22C" Margin="0,0,0,0"
                                    Tag="{Binding}" Click="ConfirmReservation_Click"/>
                        </WrapPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Confirmed Reservations -->
        <StackPanel Margin="74,357,370,293" Background="#FF1A4645">
            <Label Content="Confirmed Reservations" Foreground="White" FontSize="18" Margin="10"/>
            <DataGrid x:Name="ConfirmedReservationsList" AutoGenerateColumns="False" Height="400" Margin="10" HeadersVisibility="Column" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                    <DataGridTextColumn Header="Table" Binding="{Binding Table.TableNumber}" Width="*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding ReservationDate}" Width="*"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding TimeReserve}" Width="*"/>
                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edit" Width="60" Height="25" Background="#FF1E90FF" Foreground="White" FontWeight="Bold"
                                            Tag="{Binding}" Click="EditReservation_Click"/>
                                    <Button Content="Cancel" Width="60" Height="25" Background="#FFCA0B0B" Foreground="White" FontWeight="Bold"
                                            Tag="{Binding}" Click="CancelReservation_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
