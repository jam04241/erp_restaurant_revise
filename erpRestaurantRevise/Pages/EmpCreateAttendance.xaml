<Page x:Class="practice.Pages.EmpCreateAttendance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
      Title="EmpCreateAttendance">
    <Grid Background="#FF051821">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="840"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="625"/>
                    <RowDefinition Height="100"/>

                </Grid.RowDefinitions>
                <Label Content="Daily Employee Attendance" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="15" FontWeight="Bold"/>
                <WrapPanel Grid.Row="0" VerticalAlignment="Bottom" Margin="0,0,0,15">

                    <TextBox Width="250" Height="25"/>
                    <TextBlock Width="20"></TextBlock>
                    <ComboBox Width="90">
                        <ComboBoxItem Content="Newest"/>
                        <ComboBoxItem Content="Oldest"/>

                    </ComboBox>

                </WrapPanel>

                <StackPanel Grid.Row="1" Background="WhiteSmoke">
                    <DataGrid x:Name="attendanceRecordDataGrid" Height="625" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeID}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" IsReadOnly="True"/>

                            <DataGridTemplateColumn Header="Time In">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox 
                Text="{Binding TimeIn, Mode=TwoWay, StringFormat={}{0:hh\\:mm}, TargetNullValue=00:00, FallbackValue=00:00}" 
                Width="100"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Time Out">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox 
                Text="{Binding TimeOut, Mode=TwoWay, StringFormat={}{0:hh\\:mm}, TargetNullValue=00:00, FallbackValue=00:00}" 
                Width="100"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <DataGridTemplateColumn Header="Action">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Submit" Click="SubmitAttendance_Click" Tag="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>



                </StackPanel>

            </Grid>

        </Grid>



    </Grid>
</Page>
