<Page x:Class="practice.Pages.EmpCreateAttendance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
      Title="EmpCreateAttendance">

    <Grid Background='#FF051821'>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="700"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Label Content="Daily Attendance" Width="754" Foreground="White" FontSize="20"/>
            <TextBlock Height="50"/>

            <Label Content="Employee Name" Width="750" Foreground="White" FontSize="15"/>
            <WrapPanel Height="50" Width="750" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBox x:Name="searchEmployeeTxt" Width="260" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBlock Width="30"/>
                <Button x:Name="searchEmployeeBtn" Content="Search" Padding="6,2" Width="92" Background="#FF8CC72B" Foreground="#FF231212" Click="searchEmployeeBtn_Click"/> 
                <TextBlock Width="30"/>
                <ComboBox x:Name="positionComboBox" Width="150" Margin="0,0,10,0"
              DisplayMemberPath="PositionName"
              SelectedValuePath="PositionID"/>  


                <TextBlock Width="300"/>
                

            </WrapPanel>
            <StackPanel Width="750" Height="500">
                <DataGrid x:Name="dailyAttendanceDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  RowHeight="36"
                  ItemsSource="{Binding}" Height="500">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="EmployeeID" Binding="{Binding EmployeeID}" IsReadOnly="True" Width="90"/>
                        <DataGridTextColumn Header="FullName" Binding="{Binding FullName}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Position" Binding="{Binding PositionName}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Time In (HH:mm)" Binding="{Binding TimeIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:hh\\:mm}}" Width="120" x:Name="timeInBox"/>
                        <DataGridTextColumn Header="Time Out (HH:mm)" Binding="{Binding TimeOut, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:hh\\:mm}}" Width="120" x:Name="timeOutBox"/>

                        <DataGridTemplateColumn Header="Action" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Submit" Padding="6,2" Click="SubmitRow_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>




            </StackPanel>

        </StackPanel>

    </Grid>
    </Page>

