<Page x:Class="practice.Pages.EmpAttendanceRecord"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="900"
      Title="EmpAttendanceRecord">

	<Grid Background='#FF051821'>
		<Grid.RowDefinitions>
			<RowDefinition Height="100"/>
			<RowDefinition Height="700"/>
			<RowDefinition Height="100"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="1">
			<Label Content="Employee Attendance Records" Width="750" Foreground="White" FontSize="20"/>
			<TextBlock Height="50"/>

			<WrapPanel Height="50" Width="750" HorizontalAlignment="Center" VerticalAlignment="Center">

				<TextBox Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
				<TextBlock Width="30"/>
				<ComboBox Width="100" SelectedIndex="0">
					<ComboBoxItem Content="Newest"/>
					<ComboBoxItem Content="Oldest"/>

				</ComboBox>
				<TextBlock Width="300"/>
				<!-- <Button Width="120" Content="Create Attendance"/> -->



			</WrapPanel>
			<StackPanel Width="750" Height="500">
				<DataGrid x:Name="attendanceRecordDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          RowHeight="36" Height="500"
                          ItemsSource="{Binding}">
					<DataGrid.Columns>
						<DataGridTextColumn Header="EmployeeID" Binding="{Binding employeeID}" Width="90"/>
						<DataGridTextColumn Header="Full Name" Binding="{Binding fullName}" Width="2*"/>
						<DataGridTextColumn Header="Time In (HH:mm)" Binding="{Binding timeIn}" Width="120"/>
						<DataGridTextColumn Header="Time Out (HH:mm)" Binding="{Binding timeOut}" Width="120"/>
						<DataGridTextColumn Header="Hours Worked" Binding="{Binding hourWorked}" Width="100"/>
						<DataGridTextColumn Header="Status" Binding="{Binding status}" Width="*" />

						<!-- Action Buttons -->
						<DataGridTemplateColumn Header="Action" Width="160">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
										<Button Content="Edit" Padding="10,2" Margin="2"
                                                Click="EditRow_Click"/>
										<Button Content="Delete" Padding="10,2" Margin="2"
                                                Click="DeleteRow_Click"/>
									</StackPanel>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
					</DataGrid.Columns>
				</DataGrid>



			</StackPanel>

		</StackPanel>

	</Grid>
</Page>

