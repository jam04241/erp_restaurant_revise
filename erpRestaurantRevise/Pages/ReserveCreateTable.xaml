<Page x:Class="practice.Pages.ReserveCreateTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
      Title="ReserveCreateTable">

    <Grid Background='#FF051821'>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="800"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.RowSpan="2">
            <Label Content="Create Table" Margin="70,78,0,0" VerticalAlignment="Top" Foreground="White" FontSize="18" FontFamily="Arial" HorizontalAlignment="Left" FontWeight="Bold" />

            <Label Content="Table No" Margin="70,198,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14" FontFamily="Arial" HorizontalAlignment="Left" />
            <Label Content="Station" HorizontalAlignment="Left" Margin="231,198,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14" FontFamily="Arial" />
            <Label Content="Table Quantity" HorizontalAlignment="Left" Margin="371,198,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14" FontFamily="Arial" />
            <Label Content="Chair Quantity" HorizontalAlignment="Left" Margin="537,198,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14" FontFamily="Arial" />

            <TextBox x:Name="TableNoTextBox" HorizontalAlignment="Left" Margin="70,241,0,0" Width="117" Height="29" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="15"/>
            <TextBox x:Name="LocationTextBox" HorizontalAlignment="Left" Margin="231,241,0,0" Width="117" Height="29" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="15"/>
            <TextBox x:Name="TableQuantityTextBox" HorizontalAlignment="Left" Margin="381,241,0,0" Width="117" Height="29" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="15"/>
            <TextBox x:Name="ChairQuantityTextBox" HorizontalAlignment="Left" Margin="533,241,0,0" Width="118" Height="29" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="15"/>

            <Button Content="Create" HorizontalAlignment="Left" Margin="690,239,0,0" VerticalAlignment="Top" Width="122" Height="24" Background="#FFABFF00" Foreground="Black" FontWeight="Bold" FontSize="15"
                    Click="CreateTableButton_Click"/>

            <DataGrid x:Name="TablesDataGrid" Height="200" AutoGenerateColumns="False" IsReadOnly="True" Margin="70,325,88,325">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Table No" Binding="{Binding TableNumber}" Width="*"/>
                    <DataGridTextColumn Header="Station" Binding="{Binding Location}" Width="*"/>
                    <DataGridTextColumn Header="Table Quantity" Binding="{Binding TableQuantity}" Width="*"/>
                    <DataGridTextColumn Header="Chair Quantity" Binding="{Binding ChairQuantity}" Width="*"/>

                    <!-- Action Column -->
                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edit" Width="60" Height="25" Background="#FF00BFFF" Foreground="White" FontWeight="Bold"
                                Click="EditRowButton_Click"/>
                                    <Button Content="Delete" Width="60" Height="25" Background="#FFFF4500" Foreground="White" FontWeight="Bold"
                                Click="DeleteRowButton_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
