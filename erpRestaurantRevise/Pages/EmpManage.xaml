<Page x:Class="practice.Pages.EmpManage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="800"
      Title="EmpManage">

    <Grid Background="#FF051821">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Width="800" Height="800">
            <WrapPanel Margin="50,146,47,54" Height="600" Width="700">
                <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Height="600" MaxHeight="600" MaxWidth="600" Width="700"/>
            </WrapPanel>
            <TextBox HorizontalAlignment="Left" Margin="370,100,0,0" TextWrapping="Wrap" Text="Name / Employee no." VerticalAlignment="Top" Width="230" Height="24"/>
            <Button Content="Search" HorizontalAlignment="Left" Margin="614,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.114,0.125" Height="24" Width="96" Background="#FF7DD22C" Foreground="White"/>
            <Label Content="Manage Attendance" HorizontalAlignment="Left" Margin="47,28,0,0" VerticalAlignment="Top" Foreground="White" FontSize="18"/>
        </Grid>
    </Grid>
</Page>
